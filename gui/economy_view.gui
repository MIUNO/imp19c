				spacing = 5
				margin = { 10 0 }
				background = {
					shaderfile = "gfx/FX/pdxgui_default.shader"
					using = beige_background
					using = portrait_x32y32bd_alpha
					alpha = 0.15
					margin = { -2 0 }
					margin_right = 6
					margin_bottom = 8
				}
				icon_and_text = {
					size = { 140 0 }
					blockoverride "Text" { text = "[GuiScope.SetRoot( Player.MakeScope ).ScriptValue('INCOME_excise_duties_country')|3+=]" }
					blockoverride "Icon" { texture = "gfx/interface/icons/shared_icons/treasury.dds" }
