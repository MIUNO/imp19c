			#}
		}
	}

	type income_policy_container = flowcontainer {
		name = "excise_tax_rate"
		flowcontainer = {
			direction = vertical
			margin = { 2 5 }
			widget = {
				size = { 100% 100% }
				using = background_widget
				blockoverride "Margin" { margin = { 2 2 } }
			}
			flowcontainer = {
				margin_top = 5
				margin_bottom = 2
				widget = {
					size = { 155 38 }
					textbox = {
						size = { 100% 34 }
						margin_left = 10
						align = vcenter
						using = BaseFontS
						using = Black_FontColor
						text = "Excise duty"
						tooltip = "EXCISE_TAX_RATE_TT"
					}
				}
				flowcontainer = {
					name = "imp19c_economic_policy_buttons"
					parentanchor = bottom
					policy_button = {
						tooltip = "0%"
